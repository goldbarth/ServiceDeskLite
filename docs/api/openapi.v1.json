  "paths": {
    "/api/v1/tickets": {
      "get": {
        "description": "Returns a paged list of tickets with deterministic sorting (CreatedAt + Id).",
        "operationId": "Tickets_Search",
        "parameters": [
          {
            "in": "query",
            "name": "Page",
            "schema": {
              "default": 1,
              "format": "int32",
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": [
                "integer",
                "string"
              ]
            }
          },
          {
            "in": "query",
            "name": "PageSize",
            "schema": {
              "default": 25,
              "format": "int32",
              "pattern": "^-?(?:0|[1-9]\\d*)$",
              "type": [
                "integer",
                "string"
              ]
            }
          },
          {
            "in": "query",
            "name": "SortField",
            "schema": {
              "$ref": "#/components/schemas/TicketSortField"
            }
          },
          {
            "in": "query",
            "name": "SortDirection",
            "schema": {
              "$ref": "#/components/schemas/SortDirection"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PagedResponseOfTicketListItemResponse"
                }
              }
            },
            "description": "OK"
          },
          "400": {
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            },
            "description": "Bad Request"
          },
          "500": {
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            },
            "description": "Internal Server Error"
          }
        },
        "summary": "Search tickets",
        "tags": [
          "Tickets"
        ]
      },
      "post": {
        "operationId": "Tickets_Create",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTicketRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateTicketResponse"
                }
              }
            },
            "description": "Created"
          },
