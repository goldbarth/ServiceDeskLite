{
    "build": {
        "content": [
            { "files": [ "**/*.md", "**/toc.yml" ], "src": "." }
        ],
        "template": [
            "default",
            "template"
        ],
        "resource": [
            { "files": [ 
                "api/openapi.v1.json", 
                "api/openapi.swagger.html", 
                "api/swagger-ui/**"
            ], "src": "." },
            { "files": [ "**/*.png", 
                "**/*.jpg", 
                "**/*.svg", 
                "**/*.gif" 
            ], "src": "." }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appTitle": "ServiceDeskLite Documentation",
            "_enableSearch": true
        }
    }
}
