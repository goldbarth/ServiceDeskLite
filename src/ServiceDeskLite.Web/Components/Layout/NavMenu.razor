@using MudBlazor
@using ServiceDeskLite.Web.Composition

<MudNavMenu Dense="true">
    @foreach (var item in NavRegistry.Items.OrderBy(i => i.Order))
    {
        if (item.IsSection)
        {
            <MudDivider Class="my-2" />
            <MudText Typo="Typo.overline" Class="px-4">@item.Title</MudText>
        }
        else
        {
            <MudNavLink Href="@item.Href"
                        Icon="@item.Icon"
                        Match="@item.Match">
                @item.Title
            </MudNavLink>
        }
    }
</MudNavMenu>
